<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="15dp"
        android:padding="0dp"
        app:cardCornerRadius="4dp">


        <RelativeLayout
            android:id="@+id/inter_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/inter_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:maxEms="6"
                android:maxLines="1"
                android:text="技术：安装盖板"
                android:textColor="@color/inter_text"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_inface_remind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/inter_title"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="3dp"
                android:layout_toEndOf="@+id/inter_title"
                android:layout_toRightOf="@+id/inter_title"
                android:textColor="@color/writer"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/inter_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/inter_title"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/item_inface_remind"
                android:layout_toRightOf="@+id/item_inface_remind"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="2017-03-01"
                android:textColor="@color/editext_text"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/inface_wbs_path"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/inter_title"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_weight="7"
                android:ellipsize="end"
                android:maxEms="14"
                android:maxLines="1"
                android:text="13sp"
                android:textColor="@color/textViwe" />


            <TextView
                android:id="@+id/inter_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/inface_wbs_path"
                android:layout_alignStart="@+id/inface_wbs_path"
                android:layout_below="@+id/inface_wbs_path"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:maxEms="12"
                android:maxLines="1"
                android:text="请及时上传标段工程安装的详细资料请及时上传标段工程安装的详细资料请及时上传标段工程安装的详细资料请及时上传标段工程安装的详细资料请及时上传标段工程安装的详细资料"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/inter_content"
                android:layout_marginTop="10dp"
                android:background="@color/back" />

            <TextView
                android:id="@+id/inter_text"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/view"
                android:gravity="center"
                android:textColor="@color/inter_text"
                android:textSize="13sp"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/inface_status_true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view"
                android:layout_marginTop="5dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/inface_avatar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:src="@mipmap/mine_avatar" />

                <TextView
                    android:id="@+id/inface_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/inface_avatar"
                    android:layout_toRightOf="@+id/inface_avatar"
                    android:text="周恺"
                    android:textColor="@color/blue"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/inface_uptime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/inface_username"
                    android:layout_toRightOf="@+id/inface_username"
                    android:text="2018-12-12"
                    android:textColor="@color/textViwe" />

                <TextView
                    android:id="@+id/inface_pcontent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/inface_username"
                    android:layout_alignStart="@+id/inface_username"
                    android:layout_below="@+id/inface_username"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:maxEms="10"
                    android:maxLines="1"
                    android:text="定义定义定义定义定义定义"
                    android:textSize="15sp" />


                <LinearLayout
                    android:id="@+id/inface_image"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@+id/inface_pcontent"
                    android:orientation="horizontal">

                    <com.android.volley.toolbox.NetworkImageView
                        android:id="@+id/inface_image1"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="15sp"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:src="@mipmap/image_loading" />

                    <com.android.volley.toolbox.NetworkImageView
                        android:id="@+id/inface_image2"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="3sp"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:src="@mipmap/image_loading" />


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="100sp"
                        android:layout_marginLeft="3sp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:scaleType="fitXY">

                        <com.android.volley.toolbox.NetworkImageView

                            android:id="@+id/inface_image3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@mipmap/image_loading" />

                        <TextView
                            android:id="@+id/inface_imgae_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:scaleType="fitXY"
                            android:text="+3"
                            android:textColor="@color/writer"
                            android:textSize="40sp" />


                    </RelativeLayout>


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/inface_image">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="2dp"
                        android:background="@color/back"></View>

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:background="@mipmap/view_positioning" />

                    <TextView
                        android:id="@+id/inface_loation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_toEndOf="@+id/imageView"
                        android:layout_toRightOf="@+id/imageView"
                        android:text="贵阳市云岩区"
                        android:textSize="10sp" />


                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_toLeftOf="@+id/textView4"
                        android:layout_toStartOf="@+id/textView4"
                        android:background="@mipmap/message" />


                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginEnd="14dp"
                        android:layout_marginRight="14dp"
                        android:gravity="center"
                        android:text="(2)"
                        android:textSize="10sp" />
                </RelativeLayout>


            </RelativeLayout>

            <com.example.administrator.newsdf.utils.SlantedTextView
                android:id="@+id/inface_item_message"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentRight="true"
                app:slantedLength="28dp"
                app:slantedMode="right_triangle"
                app:slantedText="未完成"
                app:slantedTextSize="10sp" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>