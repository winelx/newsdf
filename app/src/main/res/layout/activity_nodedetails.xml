<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    android:orientation="vertical">


    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/colorPrimaryDark">

                    <LinearLayout
                        android:id="@+id/check_back"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <com.joanzapata.iconify.widget.IconTextView
                            android:layout_width="25dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center|start"
                            android:gravity="center"
                            android:paddingLeft="15dp"
                            android:text="{fa-angle-left}"
                            android:textColor="@color/writer"
                            android:textSize="30sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/node_commit"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:text="保存"
                        android:textColor="@color/writer"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/check_keep"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="节点信息配置"
                        android:textColor="@color/writer"
                        android:textSize="18sp" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/writer">

                    <LinearLayout
                        android:id="@+id/node_lin_start"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="21dp"
                        android:layout_marginRight="21dp"
                        android:layout_toLeftOf="@+id/node_lin_stop"
                        android:layout_toStartOf="@+id/node_lin_stop"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/node_start"
                            android:layout_width="23dp"
                            android:layout_height="23dp"
                            android:layout_gravity="center"
                            android:background="@mipmap/node_start" />

                        <TextView
                            android:id="@+id/node_start_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:layout_marginLeft="3sp"
                            android:gravity="center"
                            android:text="启动"
                            android:textColor="@color/persomal_text"
                            android:textSize="16sp" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/node_lin_stop"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="19dp"
                        android:layout_marginRight="19dp"
                        android:layout_toLeftOf="@+id/node_lin_complete"
                        android:layout_toStartOf="@+id/node_lin_complete"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/node_stop"
                            android:layout_width="23dp"
                            android:layout_height="23dp"
                            android:layout_gravity="center"
                            android:background="@mipmap/node_stop" />

                        <TextView
                            android:id="@+id/node_stop_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:layout_marginLeft="3sp"
                            android:gravity="center"
                            android:text="暂停"
                            android:textColor="@color/persomal_text"
                            android:textSize="16sp" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/node_lin_complete"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="20dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/node_complete"
                            android:layout_width="23dp"
                            android:layout_height="23dp"
                            android:layout_gravity="center"
                            android:background="@mipmap/node_complete" />

                        <TextView
                            android:id="@+id/node_complete_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:layout_marginLeft="3sp"
                            android:gravity="center"
                            android:text="完成"
                            android:textColor="@color/persomal_text"
                            android:textSize="16sp" />

                    </LinearLayout>

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/organizationa"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/writer">

                    <TextView
                        android:id="@+id/node_wbs"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:gravity="center"
                        android:text="WBS名称"
                        android:textColor="#323232" />


                    <TextView
                        android:id="@+id/node_wbs_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="35dp"
                        android:layout_marginStart="35dp"
                        android:layout_toEndOf="@+id/node_wbs"
                        android:layout_toRightOf="@+id/node_wbs"
                        android:gravity="center"

                        android:textColor="#5c5c5c" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/back"></View>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:background="@color/writer">

                    <TextView
                        android:id="@+id/projectname"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:gravity="center"
                        android:text="所属项目"
                        android:textColor="#323232" />


                    <TextView
                        android:id="@+id/node_wbs_project"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="35dp"
                        android:layout_marginStart="35dp"
                        android:layout_toEndOf="@+id/projectname"
                        android:layout_toRightOf="@+id/projectname"
                        android:gravity="center"

                        android:textColor="#5c5c5c" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/back"></View>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="49dp"

                    android:background="@color/writer">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:gravity="center"
                        android:text="工程类型"
                        android:textColor="#323232" />


                    <TextView
                        android:id="@+id/node_wbs_type"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="35dp"
                        android:layout_marginStart="35dp"
                        android:layout_toEndOf="@+id/textView2"
                        android:layout_toRightOf="@+id/textView2"
                        android:gravity="center"

                        android:textColor="#5c5c5c" />


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/back"></View>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:background="@color/writer">

                    <TextView
                        android:id="@+id/checkbox_status"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:gravity="center"
                        android:text="施工状态"
                        android:textColor="#323232" />

                    <TextView
                        android:id="@+id/node_wbs_status"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="35dp"
                        android:layout_marginStart="35dp"
                        android:layout_toEndOf="@+id/checkbox_status"
                        android:layout_toRightOf="@+id/checkbox_status"
                        android:gravity="center"

                        android:textColor="#5c5c5c" />


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/back"></View>

                <RelativeLayout
                    android:id="@+id/user_list"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/writer">

                    <TextView
                        android:id="@+id/node_respon"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:gravity="center"
                        android:text="负责人"
                        android:textColor="#323232" />


                    <TextView
                        android:id="@+id/node_wbs_username"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="51dp"
                        android:layout_marginStart="51dp"
                        android:layout_toEndOf="@+id/node_respon"
                        android:layout_toRightOf="@+id/node_respon"
                        android:gravity="center" />

                    <com.joanzapata.iconify.widget.IconTextView
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="15dp"
                        android:layout_marginRight="15dp"
                        android:gravity="center"
                        android:text="{fa-angle-right}"
                        android:textColor="@color/inconfy"
                        android:textSize="30sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/back"></View>

                <RelativeLayout
                    android:id="@+id/node_lin_pro"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:background="@color/writer">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:gravity="center"
                        android:text="完成度"
                        android:textColor="#323232" />

                    <TextView
                        android:id="@+id/node_wbs_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="52dp"
                        android:layout_marginStart="52dp"
                        android:layout_toEndOf="@+id/textView3"
                        android:layout_toRightOf="@+id/textView3"
                        android:gravity="center" />

                    <com.joanzapata.iconify.widget.IconTextView
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:gravity="center"
                        android:text="{fa-angle-right}"
                        android:textColor="@color/inconfy"
                        android:textSize="30sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/node_configuration_task"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/writer">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="15dp"
                        android:gravity="center"
                        android:text="任务配置 >>"
                        android:textColor="@color/colorAccent"
                        android:textSize="15sp" />

                </RelativeLayout>
            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/fab"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="45dp"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp"
                android:src="@mipmap/drawphoto"
                app:backgroundTint="#00B4FF"
                app:fabSize="auto"
                app:rippleColor="#56abe4" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginTop="50dp"
            android:background="#fff">

            <com.scwang.smartrefresh.layout.SmartRefreshLayout
                android:id="@+id/drawerLayout_smart"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ListView
                    android:id="@+id/drawer_layout_list"
                    android:layout_width="match_parent"

                    android:layout_height="match_parent"
                    android:divider="@color/back"
                    android:dividerHeight="1px"
                    android:scrollbars="none" />

                <com.scwang.smartrefresh.layout.footer.ClassicsFooter
                    android:layout_width="match_parent"
                    android:layout_height="45dp" />
            </com.scwang.smartrefresh.layout.SmartRefreshLayout>
        </LinearLayout>
    </android.support.v4.widget.DrawerLayout>
</LinearLayout>
