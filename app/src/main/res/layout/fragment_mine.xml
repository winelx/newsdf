<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@mipmap/mine_toolbar_bg"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/mine_setting"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true">


                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                        android:src="@mipmap/mine_setting" />
                </RelativeLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/mine_avatar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:src="@mipmap/mine_avatar" />

                <TextView
                    android:id="@+id/staffName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mine_avatar"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="哈哈哈"
                    android:textColor="@color/writer"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/staffName"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:text="所属组织："
                        android:textColor="@color/writer"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/mine_organization"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:text="所属组织"
                        android:textColor="@color/writer"
                        android:textSize="15sp" />
                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/organizationa"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginTop="10dp"
                android:background="@color/writer">

                <ImageView
                    android:id="@+id/mine_img"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:background="@mipmap/organizationalmanagement" />

                <TextView
                    android:id="@+id/mine_text"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@+id/mine_img"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/mine_img"
                    android:layout_toRightOf="@+id/mine_img"
                    android:text="切换组织"
                    android:textColor="#323232" />

                <com.joanzapata.iconify.widget.IconTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/mine_text"
                    android:layout_marginRight="15dp"
                    android:text="{fa-angle-right}"
                    android:textColor="@color/inconfy"
                    android:textSize="30sp" />
            </RelativeLayout>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/back"></View>

            <RelativeLayout
                android:id="@+id/projectmember"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:background="@color/writer">

                <ImageView
                    android:id="@+id/mine_img2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:background="@mipmap/projectmember" />

                <TextView
                    android:id="@+id/mine_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@+id/mine_img2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/mine_img2"
                    android:layout_toRightOf="@+id/mine_img2"
                    android:text="项目成员"
                    android:textColor="#323232" />

                <com.joanzapata.iconify.widget.IconTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/mine_text2"
                    android:layout_marginRight="15dp"
                    android:text="{fa-angle-right}"
                    android:textColor="@color/inconfy"
                    android:textSize="30sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/back"></View>

            <RelativeLayout
                android:id="@+id/changepassword"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:background="@color/writer">

                <ImageView
                    android:id="@+id/mine_img3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:background="@mipmap/changepassword" />

                <TextView
                    android:id="@+id/mine_text3"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@+id/mine_img3"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/mine_img3"
                    android:layout_toRightOf="@+id/mine_img3"
                    android:text="修改密码"
                    android:textColor="#323232" />

                <com.joanzapata.iconify.widget.IconTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/mine_text3"
                    android:layout_marginRight="15dp"
                    android:text="{fa-angle-right}"
                    android:textColor="@color/inconfy"
                    android:textSize="30sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/back"></View>

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:background="@color/writer"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/mine_img4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:background="@mipmap/systemsettings" />

                <TextView
                    android:id="@+id/mine_text4"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@+id/mine_img4"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/mine_img4"
                    android:layout_toRightOf="@+id/mine_img4"
                    android:text="系统设置"
                    android:textColor="#323232" />

                <com.joanzapata.iconify.widget.IconTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/mine_text4"
                    android:layout_marginRight="15dp"
                    android:text="{fa-angle-right}"
                    android:textColor="@color/inconfy"
                    android:textSize="30sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/back"></View>

            <RelativeLayout
                android:id="@+id/about_us"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:background="@color/writer">

                <ImageView
                    android:id="@+id/mine_img5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:background="@mipmap/aboutus" />

                <TextView
                    android:id="@+id/mine_text5"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@+id/mine_img5"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/mine_img5"
                    android:layout_toRightOf="@+id/mine_img5"
                    android:text="关于我们"
                    android:textColor="#323232" />

                <com.joanzapata.iconify.widget.IconTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/mine_text5"
                    android:layout_marginRight="15dp"
                    android:text="{fa-angle-right}"
                    android:textColor="@color/inconfy"
                    android:textSize="30sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/back"></View>

            <RelativeLayout
                android:id="@+id/mine_Thecache"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:background="@color/writer">

                <ImageView
                    android:id="@+id/mine_img6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:background="@mipmap/clearcache" />

                <TextView
                    android:id="@+id/mine_text6"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@+id/mine_img6"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/mine_img6"
                    android:layout_toRightOf="@+id/mine_img6"
                    android:text="清除缓存"
                    android:textColor="#323232" />

                <com.joanzapata.iconify.widget.IconTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/mine_text6"
                    android:layout_marginRight="15dp"
                    android:text="{fa-angle-right}"
                    android:textColor="@color/inconfy"
                    android:textSize="30sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/back"></View>

            <RelativeLayout
                android:id="@+id/newversion"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:background="@color/writer">

                <ImageView
                    android:id="@+id/version_img7"
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:background="@mipmap/new_version" />

                <TextView
                    android:id="@+id/version_text"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@+id/version_img7"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/version_img7"
                    android:layout_toRightOf="@+id/version_img7"
                    android:text="新版本检查"
                    android:textColor="#323232" />

                <TextView
                    android:id="@+id/mine_uploadings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18sp"
                    android:layout_toEndOf="@+id/version_text"
                    android:layout_toRightOf="@+id/version_text"
                    android:background="@drawable/uploading"
                    android:gravity="center"
                    android:text="有新版本"
                    android:textColor="@color/writer"
                    android:textSize="8sp"
                    android:visibility="gone" />

                <com.joanzapata.iconify.widget.IconTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/version_text"
                    android:layout_marginRight="15dp"
                    android:text="{fa-angle-right}"
                    android:textColor="@color/inconfy"
                    android:textSize="30sp" />
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/back"></View>

            <RelativeLayout
                android:id="@+id/BackTo"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:background="@color/writer">

                <ImageView
                    android:id="@+id/mine_img7"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:background="@mipmap/exit" />

                <TextView
                    android:id="@+id/mine_text7"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@+id/mine_img7"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/mine_img7"
                    android:layout_toRightOf="@+id/mine_img7"
                    android:text="退出登录"
                    android:textColor="#323232" />

                <com.joanzapata.iconify.widget.IconTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/mine_text7"
                    android:layout_marginRight="15dp"
                    android:text="{fa-angle-right}"
                    android:textColor="@color/inconfy"
                    android:textSize="30sp" />
            </RelativeLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>