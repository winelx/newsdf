<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimaryDark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/com_back"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="{fa-angle-left}"
                android:textColor="@color/writer"
                android:textSize="30sp" />


            <EditText
                android:id="@+id/com_title"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="8"
                android:background="@drawable/editext_style"
                android:drawableLeft="@mipmap/search_for"
                android:paddingLeft="10dp"
                android:text="组织管理"
                android:textColor="@color/writer"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/com_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="搜索"
                android:textColor="@color/writer"
                android:textSize="18sp" />
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

</LinearLayout>
