<?xml version="1.0" encoding="utf-8"?>
<com.example.administrator.newsdf.utils.SquareItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="90dp"
        android:layout_height="95dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:padding="1dip"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/v_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/iv_photo"
        android:layout_alignRight="@+id/iv_photo"
        android:layout_alignTop="@+id/iv_photo"
        android:clickable="true"
        android:src="@mipmap/rec_error" />

</com.example.administrator.newsdf.utils.SquareItemLayout>
