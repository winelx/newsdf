<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="73dp"
    android:id="@+id/member"
    android:background="@color/writer">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView"
        android:layout_width="50sp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:background="@mipmap/mine_avatar" />

    <TextView
        android:id="@+id/member_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/circleImageView"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/circleImageView"
        android:layout_toRightOf="@+id/circleImageView"
        android:text="夏末"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/member_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="总体、桥梁系和附属工程"
        android:textSize="15sp"
        android:layout_alignBottom="@+id/circleImageView"
        android:layout_alignLeft="@+id/member_name"
        android:layout_alignStart="@+id/member_name" />

    <com.joanzapata.iconify.widget.IconTextView
        android:id="@+id/com_back"
        android:layout_width="45dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/member_name"
        android:layout_gravity="center|start"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:text="{fa-angle-right}"
        android:textColor="@color/back"
        android:textSize="35sp" />

</RelativeLayout>